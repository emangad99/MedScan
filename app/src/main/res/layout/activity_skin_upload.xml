<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".skin_upload">

    <TextView
        android:id="@+id/textView18"
        android:layout_width="120dp"
        android:layout_height="31dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="38dp"
        android:fontFamily="sans-serif-medium"
        android:text="MEDSCAN"
        android:textColor="@color/color2"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/imageView13"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="99dp"
        android:layout_height="70dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintEnd_toStartOf="@+id/textView18"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon2" />

    <ImageView
        android:id="@+id/image_ray"
        android:layout_width="370dp"
        android:layout_height="380dp"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="268dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView18"
        app:srcCompat="@drawable/skin_upload" />

    <TextView
        android:id="@+id/text_skin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:layout_marginEnd="117dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/please_upload_a_picture_of_the_skin"
        android:textColor="@color/color2"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.138"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_ray" />

    <ImageView
        android:id="@+id/choose"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="80dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_upload_rays"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_skin"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_photo" />

    <Button
        android:id="@+id/btn_upload_rays"
        android:layout_width="285dp"
        android:layout_height="49dp"
        android:layout_marginBottom="59dp"
        android:background="@drawable/custom_button"
        android:clickable="false"
        android:fontFamily="sans-serif-medium"
        android:text="@string/check_now"
        android:textAllCaps="false"
        android:textColor="@color/color3"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/camera"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/choose"
        app:layout_constraintEnd_toStartOf="@+id/choose"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/choose"
        app:srcCompat="@drawable/ic_camera" />

</androidx.constraintlayout.widget.ConstraintLayout>