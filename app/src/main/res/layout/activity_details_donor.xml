<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsDonor">

    <EditText
        android:id="@+id/txt_name"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/custominput"
        android:ems="10"
        android:hint=" Name"
        android:inputType="text"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/black"
        android:textColorHint="#ACACAC"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView16" />

    <EditText
        android:id="@+id/txt_blood_type"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/custominput"
        android:ems="10"
        android:hint=" Blood Type"
        android:inputType="text"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/black"
        android:textColorHint="#ACACAC"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_phone" />

    <EditText
        android:id="@+id/txt_blood_type2"
        android:layout_width="280dp"
        android:layout_height="70dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="17dp"
        android:background="@drawable/custominput"
        android:ems="10"
        android:hint=" medical history"
        android:inputType="text"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/black"
        android:textColorHint="#ACACAC"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_submit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_blood_type" />

    <EditText
        android:id="@+id/txt_phone"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/custominput"
        android:ems="10"
        android:hint=" Phone"
        android:inputType="phone"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/black"
        android:textColorHint="#ACACAC"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_address" />

    <EditText
        android:id="@+id/txt_address"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/custominput"
        android:ems="10"
        android:hint=" Address"
        android:inputType="text"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/black"
        android:textColorHint="#ACACAC"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_name" />

    <ImageView
        android:id="@+id/imageView25"
        android:layout_width="290dp"
        android:layout_height="326dp"
        android:layout_marginStart="110dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hi" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/custom_button"
        android:text="@string/sub"
        android:textColor="@color/color3"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_blood_type" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="313dp"
        android:layout_height="35dp"
        android:layout_marginTop="295dp"
        android:text="@string/textview"
        android:textColor="@color/color2"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.673"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="212dp"
        android:layout_height="26dp"
        android:layout_marginTop="152dp"
        android:text="Hi Donor .."
        android:textColor="@color/color2"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.613"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView25" />

</androidx.constraintlayout.widget.ConstraintLayout>