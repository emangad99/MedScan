<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color6">
    <RelativeLayout
        android:id="@+id/root_layout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color6"
        tools:context=".skin_doctors">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="644dp"
            android:backgroundTint="@color/color2"
            android:src="@drawable/build_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="@color/white"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/textView30"
            android:layout_width="204dp"
            android:layout_height="44dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="103dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="102dp"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="@string/best_doctors"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/skin_relative1"
            android:layout_width="match_parent"
            android:layout_height="122dp"
            android:layout_below="@+id/textView30"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/linear_feedback">

            <ImageView


                android:id="@+id/skin_doc1"
                android:layout_width="128dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:transitionName="imagetransaction"
                app:srcCompat="@drawable/skin_doc1" />

            <TextView
                android:id="@+id/skin_name_doc1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/skin_doc1"
                android:foregroundGravity="center"
                android:gravity="center"
                android:text="Dr. Nermin Diab"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:transitionName="nametransaction" />

            <TextView
                android:id="@+id/skin_des1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/skin_name_doc1"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_toEndOf="@+id/skin_doc1"
                android:text="Kidney and diabetes consultant
Nephrologist specialized in Adult ..."
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:transitionName="desctransaction" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/skin_relative2"
            android:layout_width="match_parent"
            android:layout_height="122dp"
            android:layout_below="@+id/skin_relative1"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/linear_feedback">

            <ImageView
                android:id="@+id/skin_doc2"
                android:layout_width="128dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                android:transitionName="imagetransaction2"
                app:srcCompat="@drawable/skin_doc2" />

            <TextView
                android:id="@+id/skin_name_doc2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="18dp"
                android:layout_marginTop="20dp"
                android:foregroundGravity="center"
                android:gravity="center"
                android:text="Dr. Maged Habib "
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:transitionName="nametransaction2" />

            <TextView
                android:id="@+id/skin_des2"
                android:layout_width="233dp"
                android:layout_height="70dp"
                android:layout_below="@+id/skin_name_doc2"
                android:layout_alignParentStart="true"
                android:layout_marginStart="18dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_toStartOf="@+id/skin_doc2"
                android:text="Consultant of Nephrology, Diabetes, Internal Medicine, Immunology ..."
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:transitionName="desctransaction2" />
        </RelativeLayout>

    </RelativeLayout>
</ScrollView>
