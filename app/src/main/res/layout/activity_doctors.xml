<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color1"
    tools:context=".doctors">

    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="122dp"
        android:layout_below="@+id/textView30"
        android:layout_marginTop="3dp"
        android:background="@drawable/linear_feedback">

        <ImageView
            android:id="@+id/doctor1"
            android:layout_width="128dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:transitionName="imagetransaction"
            app:srcCompat="@drawable/doc1" />

        <TextView
            android:id="@+id/name_doc1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="134dp"
            android:layout_toEndOf="@+id/doctor1"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="Ahmed"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:transitionName="nametransaction" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView30"
        android:layout_width="204dp"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="103dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="102dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="The best doctors "
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/relative2"
        android:layout_width="match_parent"
        android:layout_height="122dp"
        android:layout_below="@+id/relative1"
        android:layout_marginTop="10dp"
        android:background="@drawable/linear_feedback">

        <ImageView
            android:id="@+id/doctor2"
            android:layout_width="128dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:transitionName="imagetransaction2"
            app:srcCompat="@drawable/doc2" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative3"
        android:layout_width="match_parent"
        android:layout_height="122dp"
        android:layout_below="@+id/relative2"
        android:layout_marginTop="10dp"
        android:background="@drawable/linear_feedback">

        <ImageView
            android:id="@+id/doctor3"
            android:layout_width="128dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:transitionName="imagetransaction3"
            app:srcCompat="@drawable/doc3" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative4"
        android:layout_width="match_parent"
        android:layout_height="122dp"
        android:layout_below="@+id/relative3"
        android:layout_marginTop="10dp"
        android:background="@drawable/linear_feedback">

        <ImageView
            android:id="@+id/doctor4"
            android:layout_width="128dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:transitionName="imagetransaction4"
            app:srcCompat="@drawable/doc4" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative5"
        android:layout_width="match_parent"
        android:layout_height="122dp"
        android:layout_below="@+id/relative4"
        android:layout_marginTop="10dp"
        android:background="@drawable/linear_feedback">

        <ImageView
            android:id="@+id/doctor5"
            android:layout_width="128dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:transitionName="imagetransaction5"
            app:srcCompat="@drawable/doc5" />
    </RelativeLayout>
</RelativeLayout>